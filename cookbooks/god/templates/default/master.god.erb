God.load "/etc/god/conf.d/*.god"

God::Contacts::Email.defaults do |c|
  c.from_name = 'god@<%= node[:domain] %>'
  c.from_email = '<%= node[:admin] %>'
  c.delivery_method = :sendmail
end

<% node["god"]["contacts"].each do |name, email| %> 
  God.contact(:email) do |c|
    c.name = '<%=name %>'
    c.to_email = '<%=email%>'
  end
<% end %>
